<% if user_signed_in? %>
  <% if current_page?(user_path(current_user.id)) %>
  <h1>マイページ</h1>
  <% else %>
  <h1>ユーザー　詳細</h1>
  <% end %>
<% else %>
<h1>ユーザー　詳細</h1>
<% end %>

<h3>ニックネーム</h3>
<%= @user.nickname %><br>
<h3>メールアドレス</h3>
<%= @user.email %><br>
<h3> 所有している植物　</h3>
<% @user.plants.each do |p| %>
  <li><%= link_to p.plant_name ,[@user,p]%></li>
  <%= link_to "削除", [@user,p], method: :delete, data: {confirm: "削除しますか?"} %>
<% end %>
<% if user_signed_in? %>
  <% if current_page?(user_path(current_user.id)) %>
  <br>
  <%= link_to '植物登録' ,new_user_plant_path(current_user.id) %>

  <% end %>
<% end %>



